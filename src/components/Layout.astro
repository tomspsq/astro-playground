---
interface Props {
	title?: string;
}

const { title = "Astro" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<nav>
				<a href="/">Home</a>
				<a href="/docs">Help & Docs</a>
			</nav>
		</header>
		
		<main>
			<slot />
		</main>
		
		<footer>
			<p>&copy; {new Date().getFullYear()} Astro Playground</p>
		</footer>
	</body>
</html>
